{
  "compilerOptions": {
    "target": "ES2016",
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },

  "exclude": [
    "node_modules"
  ]
}
