{
  "name": "nest-typescript-starter",
  "private": true,
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/nest-typescript-starter/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.10.14",
    "@nestjs/core": "^6.10.14",
    "@nestjs/microservices": "^6.10.14",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-express": "^6.10.14",
    "@nestjs/websockets": "^6.10.14",
    "@typegoose/typegoose": "^6.2.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.14.0",
    "dotenv": "^8.2.0",
    "grpc": "^1.24.2",
    "mongoose": "^5.7.5",
    "nestjs-typegoose": "^7.0.0",
    "node-fetch": "^2.6.0",
    "protobufjs": "^6.8.8",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "rxjs-grpc": "^0.2.5",
    "serialize-javascript": ">=2.1.1",
    "ts.data.json": "^0.3.0",
    "typegoose": "^5.9.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.13.3",
    "@nestjs/schematics": "^6.8.2",
    "@nestjs/testing": "^6.10.14",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.25",
    "@types/mongoose": "^5.5.41",
    "@types/node": "^12.12.24",
    "@types/node-fetch": "^2.5.4",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@post-service/base/(.*)": "<rootDir>/libs/base/src/$1",
      "@post-service/config/(.*)": "<rootDir>/libs/config/src/$1",
      "@post-service/logger/(.*)": "<rootDir>/libs/logger/src/$1",
      "@post-service/mongoose/(.*)": "<rootDir>/libs/mongoose/src/$1",
      "@post-service/users/(.*)": "<rootDir>/libs/users/src/$1",
      "@post-service/post-tags/(.*)": "<rootDir>/libs/post-tags/src/$1",
      "@post-service/posts/(.*)": "<rootDir>/libs/posts/src/$1",
      "@authorization-service/resource-policy/(.*)": "<rootDir>/libs/resource-policy/src/$1"
    }
  }
}
